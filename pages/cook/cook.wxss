.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.poster {
    width: 100%;
    height: 200px;
}

.poster image {
    width: 100%;
    height: 100%;
}

.nav {
    display: flex;
    justify-content: space-around;
    width: 100%;
    padding: 10px;
    background-color: #f8f8f8;
}

.nav-element {
    font-size: 16px;
    color: #333;
}

/* 导航图标样式 */ 
.nav-icon {
    width: 24px;
    height: 24px;
    margin-right: 8px;
}

.category-box {
    display: flex;
    justify-content: flex-start;
    width: 100%;
    padding: 10px;
    font-size: 16px;
    background-color: rgb(133, 106, 106);
}
.category-box2 {
    display: flex;
    justify-content: flex-start;
    width: 100%;
    padding: 1px;
    font-size: 16px;
    background-color: rgb(255, 105, 105);
}
.category-title {
    display: flex;
    justify-content: flex-start;
    width: 100%;
    padding: 2px;
    font-size: 16px;
    color: rgb(0, 0, 0);
    margin-left: 20px;
}

.category-description {
    font-size: 14px;
    color: #666;
}
.category {
    width: 100%;
    padding: 10px;
    /* 距离左边10 */
    margin-left: 20px;
}
.category-item {
    display: flex;
    align-items: center;
    padding: 10px 0;
}
.category-image {
    width: 100px;
    height: 100px;
    /* 外 */
    margin-right: 15px;
}
.category-views {
    font-size: 12px;
    color: #999;
    margin-left: 100px;
}
/* 分割线样式 */